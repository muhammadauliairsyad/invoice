<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Invoice {{meta.no_kwitansi}}</title>
  <style>
    * {
      box-sizing: border-box;
    }
    body {
      font-family: "Helvetica", "Arial", sans-serif;
      font-size: 12px;
      color: #1f2937;
      margin: 0;
    }
    .page {
      padding: 24px 28px;
    }
    .header {
      display: flex;
      justify-content: space-between;
      border-bottom: 2px solid #0f172a;
      padding-bottom: 16px;
      margin-bottom: 16px;
    }
    .company h1 {
      margin: 0 0 6px;
      font-size: 18px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .company p {
      margin: 2px 0;
    }
    .invoice-title {
      text-align: right;
    }
    .invoice-title h2 {
      margin: 0 0 6px;
      font-size: 22px;
      color: #0f172a;
    }
    .badge {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 11px;
      font-weight: 700;
      color: #fff;
    }
    .status-lunas { background: #16a34a; }
    .status-kurang { background: #dc2626; }
    .status-lebih { background: #2563eb; }
    .status-deposit { background: #ca8a04; }
    .status-default { background: #64748b; }
    .section {
      margin-bottom: 16px;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 16px;
    }
    .meta-box, .billto-box {
      border: 1px solid #e2e8f0;
      padding: 12px;
      border-radius: 8px;
    }
    .meta-box h3, .billto-box h3 {
      margin: 0 0 8px;
      font-size: 13px;
      text-transform: uppercase;
      color: #475569;
    }
    .meta-box p, .billto-box p {
      margin: 4px 0;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 8px;
    }
    th, td {
      border: 1px solid #e2e8f0;
      padding: 6px 8px;
      text-align: left;
      vertical-align: top;
    }
    th {
      background: #f1f5f9;
      font-size: 11px;
      text-transform: uppercase;
    }
    .summary {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 16px;
    }
    .summary-box {
      border: 1px solid #e2e8f0;
      padding: 12px;
      border-radius: 8px;
    }
    .summary-box h3 {
      margin: 0 0 8px;
      font-size: 13px;
      text-transform: uppercase;
      color: #475569;
    }
    .summary-row {
      display: flex;
      justify-content: space-between;
      margin: 4px 0;
    }
    .footer {
      margin-top: 24px;
      display: flex;
      justify-content: space-between;
      gap: 16px;
    }
    .footer-box {
      flex: 1;
      border: 1px solid #e2e8f0;
      padding: 12px;
      border-radius: 8px;
      min-height: 120px;
    }
    .signature {
      text-align: center;
      margin-top: 40px;
    }
  </style>
</head>
<body>
  <div class="page">
    <header class="header">
      <div class="company">
        <h1>{{company.name}}</h1>
        <p>{{company.address}}</p>
        <p>{{company.phone}} | {{company.email}}</p>
        <p>NPWP: {{company.npwp}}</p>
      </div>
      <div class="invoice-title">
        <h2>INVOICE</h2>
        <div class="badge {{statusClass}}">{{summary.status}}</div>
      </div>
    </header>

    <section class="section grid">
      <div class="meta-box">
        <h3>Meta Invoice</h3>
        <p><strong>No Kwitansi:</strong> {{meta.no_kwitansi}}</p>
        <p><strong>Tgl Kwitansi:</strong> {{meta.tgl_kwitansi}}</p>
        <p><strong>No Faktur Pajak:</strong> {{meta.no_faktur_pajak}}</p>
        <p><strong>Cabang:</strong> {{meta.cabang}}</p>
      </div>
      <div class="billto-box">
        <h3>Bill To</h3>
        <p><strong>{{customer.name}}</strong></p>
        <p>{{customer.address}}</p>
        <p>NPWP: {{customer.npwp}}</p>
      </div>
    </section>

    <section class="section">
      <h3>Detail Penerbangan</h3>
      <table>
        <thead>
          <tr>
            <th>No</th>
            <th>Airline</th>
            <th>Jenis</th>
            <th>Flight</th>
            <th>Registrasi</th>
            <th>Aircraft</th>
            <th>DEP</th>
            <th>ARR</th>
            <th>Tgl DEP</th>
            <th>Tgl ARR</th>
            <th>ATA UTC</th>
            <th>ATD UTC</th>
            <th>OH UTC</th>
            <th>Advance/Extend</th>
            <th>PIC Dinas</th>
          </tr>
        </thead>
        <tbody>
          {{#if items.length}}
            {{#each items}}
              <tr>
                <td>{{no}}</td>
                <td>{{airline}}</td>
                <td>{{jenis_penerbangan}}</td>
                <td>{{flight_number}}</td>
                <td>{{registrasi}}</td>
                <td>{{aircraft_type}}</td>
                <td>{{dep}}</td>
                <td>{{arr}}</td>
                <td>{{tgl_dep}}</td>
                <td>{{tgl_arr}}</td>
                <td>{{ata_utc}}</td>
                <td>{{atd_utc}}</td>
                <td>{{oh_utc}}</td>
                <td>{{advance_extend}}</td>
                <td>{{pic_dinas}}</td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="15">Tidak ada detail penerbangan.</td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </section>

    <section class="section summary">
      <div class="summary-box">
        <h3>Ringkasan Tagihan</h3>
        <div class="summary-row"><span>DPP</span><span>{{summary.dpp}}</span></div>
        <div class="summary-row"><span>PPN</span><span>{{summary.ppn}}</span></div>
        <div class="summary-row"><span>PPh23</span><span>{{summary.pph23}}</span></div>
        <div class="summary-row"><span>Total Tagihan</span><span>{{summary.nilai_tagihan}}</span></div>
      </div>
      <div class="summary-box">
        <h3>Pembayaran</h3>
        <div class="summary-row"><span>Nilai Pembayaran</span><span>{{summary.nilai_pembayaran}}</span></div>
        <div class="summary-row"><span>Potong PPh23 Sendiri</span><span>{{summary.potong_pph23_sendiri}}</span></div>
        <div class="summary-row"><span>Tanggal Bayar</span><span>{{summary.tanggal_bayar}}</span></div>
        <div class="summary-row"><span>Status</span><span>{{summary.status}}</span></div>
        <div class="summary-row"><span>Selisih</span><span>{{summary.selisih}}</span></div>
        <div class="summary-row"><span>Monitoring</span><span>{{summary.monitoring}}</span></div>
        <div class="summary-row"><span>Lama Pembayaran (hari)</span><span>{{summary.lama_pembayaran_hari}}</span></div>
      </div>
    </section>

    <footer class="footer">
      <div class="footer-box">
        <strong>Catatan</strong>
        <p>{{notes}}</p>
      </div>
      <div class="footer-box">
        <strong>Tanda Tangan</strong>
        <div class="signature">
          <p>{{signatory}}</p>
        </div>
      </div>
    </footer>
  </div>
</body>
</html>
